//Node 1 - Integrated for Accessibility and Client | Accessibility "one-to-one" Client
model Accessibility {
  id       String  @id @default(uuid())
  status   Boolean @default(true)
  idClient String? @unique
  Client   Client? @relation(fields: [idClient], references: [id])
}

model Client {
  id            String         @id @default(uuid())
  name          String?
  surname       String?
  email         String         @unique
  password      String?
  Accessibility Accessibility?
  Cart          Cart[]
}

//Node 2 - Integrated for Client and Cart |  "one-to-many"
model Cart {
  id       String   @id @default(uuid())
  idClient String
  Client   Client   @relation(fields: [idClient], references: [id])
  Detail   Detail[]
}

//Node 3 - Integrated for: Cart, Detail, Product || Cart "one-to-many" Detail, Product "one-to-many" Detail
model Product {
  id           String   @id @default(uuid())
  name         String?
  price        String?
  availability String?
  brand        String?
  model        String?
  rating       String?
  image        String?
  Detail       Detail[]
}

model Detail {
  idProduct String
  Product   Product @relation(fields: [idProduct], references: [id])
  idCart    String
  Cart      Cart    @relation(fields: [idCart], references: [id])

  @@id([idProduct, idCart])
}
